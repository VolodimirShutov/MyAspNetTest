<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @RenderBody()

    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>

    <script>
        var pathToFileSize = 'api/files';

    $(document).ready(
      function () {
          $.getJSON(pathToFileSize, null, 100)
          .done(function (data) {
              formatFileSize(data);
              currentPath(data);

              createDirectories(data);
          });
    });
        
    function createDirectories(data) {
        $('#directoris').empty();
        $.each(data.directories, function (key, item) {
            var li = $('<li>')
            var button = $('<a>', { text: item.name, id: item.id, onclick: "getElem(this)" });
            button.appendTo(li)
            li.appendTo($('#directoris'));
        });
    }

    function getElem(elem)
    {
        recreate(elem.id);
    }


    function formatFileSize(data) {
        $('#lessTen').text(data.lessTen);
        $('#ten').text(data.ten);
        $('#moreTen').text(data.moreTen);
    }

    function currentPath(data)
    {
        $('#currentPath').text(data.fullPath);
    }

    function recreate(id)
    {
        $.getJSON(pathToFileSize+ '/' + id)
         .done(function (data) {
             formatFileSize(data);
             currentPath(data);

             createDirectories(data);
         });
    }

    </script>

    <div>
        <div class="color-gray">
            <div class="col-md-4">
                Less 10 mb
            </div>
            <div class="col-md-4">
                10 mb - 50 mb
            </div>
            <div class="col-md-4">
                More 100 mb
            </div>
        </div>

        <div>
            <div class="col-md-4">
                <p id="lessTen" />
            </div>
            <div class="col-md-4">
                <p id="ten" />
            </div>
            <div class="col-md-4">
                <p id="moreTen" />
            </div>
        </div>
    </div>

    <div>
        <div>
            <b>Current path: </b><text id="currentPath" />
        </div>
    </div>
    
    <div>
        <div class="color-gray">Directoris</div>
        <div>
            <ul id="directoris" />
        </div>
    </div>

    <!--
    <div>
        <div class="col-md-4">Files</div>
        <ul id="files" />
    </div>
        -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
